</div>
@code {

    [Parameter]
    public string id { get; set; } = "";
    protected override async Task OnParametersSetAsync()
    {
        prodService.OnChange += StateHasChanged;
        //G·ªçi api get detail by id 
        prodService.GetProductByIdApi(id);
    }

    public void Dispose(){
        prodService.OnChange -= StateHasChanged;
    }

}