@page "/form-validation"
@layout HomeMasterPage
<div class="container">
    <div class="row">
        <div class="col-8">
            <EditForm Model="@model" OnInvalidSubmit="HandleSubmit">
                @* component bắt lỗi validate *@
                <DataAnnotationsValidator />
                <div class="w-50 mx-auto">
                    <h3>Register</h3>
                    <div class="alert alert-danger">
                        <ValidationSummary></ValidationSummary>
                    </div>
                    <div class="form-group">
                        <label>UserName</label>
                        <input class="form-control" @bind="model.UserName">
                        <ValidationMessage For="@(() => model.UserName)" class="text text-danger"></ValidationMessage>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" @bind="model.Password" type="password">
                        <ValidationMessage For="@(() => model.Password)" class="text text-danger"></ValidationMessage>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" @bind="model.Email">
                        <ValidationMessage For="@(() => model.Email)" class="text text-danger"></ValidationMessage>
                    </div>
                    <div class="form-group">
                        <label>FullName</label>
                        <input class="form-control" @bind="model.FullName">
                        <ValidationMessage For="@(() => model.FullName)" class="text text-danger"></ValidationMessage>
                    </div>
                    <div class="form-group my-3">
                        <label>Gender</label>
                        <input class="form-check-input" id="Male" type="radio" value="Male" checked name="Gender"
                            @onclick="@(e => ChangeGender("Male"))" />
                        <label for="Male">Male</label>
                        <input class="form-check-input" id="Female" type="radio" value="Female" checked name="Gender"
                            @onclick="@(e => ChangeGender("Female"))" />
                        <label for="Female">Female</label>
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select @bind="@model.Country">
                            @* <option value="VN">VietNam</option>
                            <option value="CN">China</option>
                            <option value="EN">EN</option> *@
                            @foreach (Country item in ListCountry.Values)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark mt-3">Register</button>
                    </div>
                </div>
            </EditForm>
        </div>
        <div class="col-4">
            <h3>Info</h3>
            <div class="alert alert-success">
                <p>UserName: @model.UserName</p>
                <p>Password: @model.Password</p>
                <p>Email: @model.Email</p>
                <p>FullName: @model.FullName</p>
                <p>Gender: @model.Gender</p>
                <p>Country: @model.Country</p>
            </div>
        </div>
    </div>
</div>

<button @onclick="AddCountry">Add Country</button>

@code {
    public RegisterViewModel model = new RegisterViewModel();

    void ChangeGender(string value)
    {
        model.Gender = value;
    }


    void HandleSubmit()
    {
        //Gửi về server lưu trữ -> file json
        Console.Write("save data");
    }
    public void AddCountry()
    {
        Country country = new Country() { Id = "ABC", Name = "XYZ" };
        ListCountry.AddCountry(country);
    }
}